@model Project_MVC_CORE_EF.Models.Camera

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Camera</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdTipoCamera" class="control-label"></label>
                <select asp-for="IdTipoCamera" class ="form-control" asp-items="ViewBag.IdTipoCamera"></select>
